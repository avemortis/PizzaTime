<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <ImageView
        android:id="@+id/meal_picture"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/meal_title"
        style="@style/TitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meal_picture"
        app:layout_constraintTop_toTopOf="@+id/meal_picture" />

    <TextView
        android:id="@+id/meal_composition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/meal_picture"
        app:layout_constraintEnd_toEndOf="@+id/meal_title"
        app:layout_constraintStart_toStartOf="@+id/meal_title"
        app:layout_constraintTop_toBottomOf="@+id/meal_title"
        android:text="@string/meal_information_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>