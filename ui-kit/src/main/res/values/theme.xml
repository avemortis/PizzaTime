<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToggleButton" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/button_background</item>
    </style>
    <style name="ActiveButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/transparent_red</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="InactiveButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ClearPaddingToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>
</resources>